{
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "esnext",
        "module": "esnext",
        "declaration": false,
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "strictPropertyInitialization": false,
        "outDir": "./lib",
        "skipLibCheck": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/src/adapter"]
}
